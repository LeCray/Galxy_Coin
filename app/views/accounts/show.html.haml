%h3
	Client: #{@account.client}
%h4
	Account Number: #{@account.account_number}

%hr

= button_tag :new_transaction, id: 'btn-new-transaction', class: 'btn btn-primary' do 
	New Transaction 	
%hr


%table.table.table-bordered
	%thead
		%tr
			%th Date of Transaction
			%th Transaction Type
			%th Amount
	%tbody
		- @account.transactions.each do |t|
			%tr
				%td #{t.created_at}
				%td #{t.transaction_type}
				%td #{t.amount}
		%tr
			%th
			%th Balance
			%th #{number_to_currency(@account.balance, unit: "GXB ")}


#modal-transaction.modal.fade.modal-fade
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{type:'button', data:{dismiss:'modal'}}
					%span{aria:{hidden:'true'}}
						%i.fa.fa-close
					%span.sr-only Close
				%h4.modal-title
					New Transaction
			.modal-body
				.row
					.col-md-6
						%label
							Transaction Type
						= select_tag :transaction_type, options_for_select(Transaction::TRANSACTION_TYPES), id: 'select-transaction-type', class: 'form-control'
					.col-md-6
						%label
							Amount
						= text_field_tag :amount, 0.00, id: 'input-amount', class: 'form-control'
			.modal-footer
				%button.btn.btn-default{type:'button', data:{dismiss:'modal'}} Close
				%button#btn-save.btn.btn-primary{type:'button'} Save			

= javascript_include_tag 'accounts/Show.js'
:javascript
	$(document).ready(function() {
		Show.init();
	});
