%h3
	Client: #{@account.client}
%h4
	Account Number: #{@account.account_number}

%hr

= button_tag :new_transaction, id: 'btn-new-transaction', class: 'btn btn-primary' do 
	New Transaction 	
%hr


%table.table.table-bordered
	%thead
		%tr
			%th Date of Transaction
			%th Transaction Type
			%th Amount
	%tbody
		- @account.transactions.each do |t|
			%tr
				%td #{t.created_at}
				%td #{t.transaction_type}
				%td #{t.amount}
		%tr
			%th
			%th Balance
			%th #{number_to_currency(@account.balance, unit: "GXB ")}

= javascript_include_tag 'accounts/Show.js'
:javascript
	$(document).ready(function() {
		Show.init();
	});
