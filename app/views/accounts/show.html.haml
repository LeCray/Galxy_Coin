%h3
	Client: #{@account.client}
%h4
	Account Number: #{@account.account_number}

%hr

.btn-toolbar
	= button_tag :new_transaction, id: 'btn-new-transaction', class: 'btn btn-primary' do 
		New Transaction 	

	= link_to accounts_path, class: 'btn btn-default' do
		Accounts

	= link_to client_path(@client.id), class: 'pull-right btn btn-default' do
		Client Profile

%hr

-#Transactions Table
= render partial: 'transactions', locals: { account: @account } 
-#Transaction Modal
= render partial: 'modal_transaction'

= link_to account_path(@account.id), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } do
	Delete Account



#parameters{ data: { account_id: @account.id } }
		

= javascript_include_tag 'accounts/Show.js'
:javascript
	$(document).ready(function() {
		Show.init();
	});
