%h1
	Accounts

.btn-toolbar
	= link_to new_account_path, class: 'btn btn-primary' do
		New Account
	= link_to root_path, class: 'btn btn-default' do
		Home

%hr

%table.table.table-bordered
	%thead
		%tr
			%th Account Holder
			%th Account Number
			%th Balance
			%th Actions
	%tbody
		- @accounts.each do |account|
			%tr 
				%td #{account.client}
				%td #{account.account_number}
				%td #{number_to_currency(account.balance, unit: "GXB ")}
				%td 
					=link_to account_path(account.id) do 
						Show Account	